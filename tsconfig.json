{
    "include": [
        "./src/*"
    ],
    "compilerOptions": {
        "strict": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "outDir": "build/dist",
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    }
}